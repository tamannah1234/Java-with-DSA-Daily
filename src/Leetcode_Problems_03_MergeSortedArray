class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
//Brute force approach ->TC:O(Nlong N)+ O(N) SC:O(1)
    // int index = m;
    // for(int i=0;i<n;i++){
    //     nums1[index++] = nums2[i];
    // }
    // Arrays.sort(nums1);


//Optimal solution O(m+n)
  int i= m-1;
  int j=n-1;
  int k = nums1.length-1;

while(i>=0 && j>=0){
    //if nums1[i] is large element
   if(nums1[i] > nums2[j]){
    nums1[k]=nums1[i];
    i--;
   }else{
    nums1[k]=nums2[j];
    j--;
   }
   k--;
}

while(j>=0){
    nums1[k]=nums2[j];
    j--;
    k--;
}
    }

}
